{
  "rules": {
    "devices": {
      "$deviceId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['timestamp']) || newData.hasChildren(['lastSeen'])",
        "readings": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    }
  }
}
